<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Chọn và xem trước nhiều ảnh -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ảnh sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:overScrollMode="always"
            android:scrollbars="horizontal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Chọn ảnh"
            app:icon="@drawable/add"
            app:iconPadding="8dp" />

        <!-- Tên sản phẩm -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Tên sản phẩm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mô tả sản phẩm -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Mô tả sản phẩm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtProductDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Danh mục"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/actvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bảng nhập SKU -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Thuộc tính sản phẩm (SKU)"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableSku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow android:background="#CCCCCC">
                    <TextView
                        android:text="Kích cỡ"
                        android:textStyle="bold"
                        android:textAlignment="center">
                    </TextView>
                    <TextView
                        android:text="Màu sắc"
                        android:textStyle="bold"
                        android:textAlignment="center">
                    </TextView>
                    <TextView
                        android:text="Số lượng"
                        android:textStyle="bold"
                        android:textAlignment="center">
                    </TextView>
                    <TextView
                        android:text="Giá"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_width="80dp">
                    </TextView>
                    <TextView
                        android:text=""
                        android:textStyle="bold"
                        android:textAlignment="center">
                    </TextView>
                </TableRow>
            </TableLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/circleButton"
            android:layout_width="34dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:cornerRadius="50dp"
            app:icon="@drawable/baseline_add_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />


        <!-- Nút lưu -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="Lưu sản phẩm"
            android:textStyle="bold"
            android:tint="@color/white" />

    </LinearLayout>
</ScrollView> 